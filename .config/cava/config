[general]
# Снижаем частоту до минимума для эффекта "замедленной съемки"
framerate = 20

# Тончайшие полоски для минимализма
bar_width = 1
bar_spacing = 1

# Игнорируем всё, кроме основных пиков музыки
lower_cut_off = 0.35

[input]
method = pipewire
source = auto

[output]
method = ncurses
channels = stereo

[color]
# Цветовая схема Tokyo Night
gradient = 1
gradient_count = 5
gradient_color_1 = '#7aa2f7'
gradient_color_2 = '#bb9af7'
gradient_color_3 = '#ff007c'
gradient_color_4 = '#f7768e'
gradient_color_5 = '#ff9e64'

[smoothing]
# Режим Monstercat включен
monstercat = 1
waves = 0

# СВЕРХВЫСОКАЯ гравитация (1000). 
# Полоски будут опускаться вниз целую вечность.
gravity = 1000

# Абсолютное сглаживание. 
# CAVA превращает любой резкий звук в очень медленную волну.
integral = 100

# Максимальное подавление резких скачков
noise_reduction = 0.99

[eq]
# Минимальная амплитуда, чтобы бары едва колыхались
1 = 0.3
2 = 0.3
3 = 0.3
4 = 0.3
5 = 0.3
